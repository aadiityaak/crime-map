{
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": "*.vue",
            "options": {
                "parser": "vue"
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": "*.php",
            "options": {
                "printWidth": 120,
                "tabWidth": 4
            }
        }
    ]
}
